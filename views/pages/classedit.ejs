<% include ../partials/header %>
<div class = "container"> 
    <h1 class="display-3">Edit <%= detail.subject_id %> - <%= detail.subject_name %></h1>
    <form action="/classsave" method="POST">
            <div class="form-group">
                <label for="">ID</label>
                <input type="text" value="<%= detail.subject_id %>" 
                class="form-control" name="id" id="" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted">Help text</small>
            </div>

        <div class="form-group">
                <label for="">Name</label>
                <input type="text" value="<%= detail.subject_name %>" 
                class="form-control" name="name" id="" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted">Help text</small>
        </div>

        <div class="form-group">
                <label for="">Room</label>
                <input type="text" value="<%= detail.room %>" 
                class="form-control" name="room" id="" aria-describedby="helpId" placeholder="">
                <small id="helpId" class="form-text text-muted">Help text</small>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
<% include ../partials/footer %>  